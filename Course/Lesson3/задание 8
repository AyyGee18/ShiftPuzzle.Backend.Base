using System;

class Program
{
    static void Main(string[] args)
    {
        char[] символы = new char[3]; // Инициализация массива из трех символов

        символы[0] = 'A'; // Присваиваем первому элементу символ 'A'
        символы[1] = 'B'; // Присваиваем второму элементу символ 'B'
        символы[2] = 'C'; // Присваиваем третьему элементу символ 'C'

        Console.WriteLine("Массив символов:");
        foreach (char символ in символы)
        {
            Console.WriteLine(символ);
        }

        // Добавьте остальную часть кода, которая выполняет нужные вам действия с массивом символов
        
    }
}