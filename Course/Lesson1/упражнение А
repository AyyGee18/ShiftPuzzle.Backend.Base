# Программа на псевдоязыке

# Объявление переменных разных типов данных
целочисленная_переменная = 10
вещественная_переменная = 3.14
строковая_переменная = "Привет, мир!"
логическая_переменная = Истина

# Вывод значений переменных на экран
вывести("Значение целочисленной переменной: " + строковое(целочисленная_переменная))
вывести("Значение вещественной переменной: " + строковое(вещественная_переменная))
вывести("Значение строковой переменной: " + строковая_переменная)
вывести("Значение логической переменной: " + строковое(логическая_переменная))